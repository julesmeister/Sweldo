{
  "private": true,
  "name": "Sweldo",
  "description": "Attendance and Payroll Management System",
  "version": "5.0.0",
  "author": "Jules Lee <jules.sy.lee@gmail.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "cd renderer && node switch-env.js nextron && cd .. && nextron",
    "setup:web": "if not exist renderer\\resources mkdir renderer\\resources && copy resources\\*.css renderer\\resources\\ && copy resources\\*.ttf renderer\\resources\\ && if not exist renderer\\public\\fonts mkdir renderer\\public\\fonts && copy resources\\*.ttf renderer\\public\\fonts\\ && if exist .env.local copy .env.local renderer\\.env.local",
    "sync:styles": "cd renderer && node scripts/sync-styles.js",
    "dev:web": "npm run setup:web && npm run sync:styles && cd renderer && node switch-env.js web && next dev",
    "build": "nextron build",
    "build:win32": "nextron build --win --ia32",
    "build:web": "npm run setup:web && npm run sync:styles && cd renderer && next build",
    "deploy": "npm run build:web && firebase deploy --only hosting",
    "postinstall": "npx electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
